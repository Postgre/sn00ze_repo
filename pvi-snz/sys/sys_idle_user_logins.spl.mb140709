//--
//	set xstr = concat("`who -u | awk 'substr($5,length($5)-4,length($5)-3) >   "09"    && $1 != "psd" && $1 != "root" && $1 != "pronto" { print \"pkill -KILL -t \" $2}'` > sys_idle_txt")
