procedure print-report-virtual
local field
	st-tr-amount						like tr-amount
	st-so-order-total-amount			like so-order-total-amount
	lf-balance							like so-order-total-amount
	gt-tr-amount						like tr-amount
	gt-so-order-total-amount			like so-order-total-amount
	gt-balance							like so-order-total-amount
	lf-notes-header						pic x(20)
	lf-show-notes-footer				type boolean //20oct08
	i									type numeric
	report "Customer Outstanding Orders"
	length 80 // 105
	depth  80 // 105
	header is top-of-page
	page
	extract tmp-virtual-table
		where tvt-rep-code between ws-start-rep-code and ws-end-rep-code  	//rc 29may09
	before tvt-accountcode
		get tmp-deb-cache
		on index tdc-accountcode
		key is tvt-accountcode
		//need 6 lines
		if tdc-seq-max > 100
			set tdc-seq-max = 0
		endif
		need tdc-seq-max + 6 lines
		set st-tr-amount = 0
		set st-so-order-total-amount = 0
		get deb-master
		on index accountcode
		key is tvt-accountcode
			//start ----------------------------------------- //rc 29may09
			get rep-master
				on index rep-code
				key is rep-code
			on error
			endon
			//end -------------------------------------------- //rc 29may09
		print
			125"="
		print
			tvt-accountcode bold
			shortname		bold
			//tdc-seq-max		bold
			//"any thing else here?"
			"Terr:"
			territory
			"Rep Code:"									//rc 29may09
			rep-code									//rc 29may09
			rep-description								//rc 29may09
		//print
		//	60"-"
		if tvt-trans-exist or st-tr-amount != 0
			print
				"Customer Transactions:" 	in col 08 bold
			no-new-line
		endif

		if tvt-orders-exist //or st-so-amount != 0
			print
				"Outstanding Orders:"		in col 65 bold
		else
			if tvt-trans-exist or st-tr-amount != 0
				skip
			endif
		endif
	detail
		//need 7 lines
		if num(tvt-so-order-status) > 0
			set so-order-status = tvt-so-order-status
			do i5sodesc-get-status-desc
		else
			set i5sodesc-so-status-desc-short = SPACES
		endif
		// 10jun09
		get sales-order
			on index so-order-no so-bo-suffix
			key is tvt-so-order-no tvt-so-bo-suffix
		on error
			get sales-order-archive
				on index so-order-no so-bo-suffix
				key is tvt-so-order-no tvt-so-bo-suffix
			on error
				initialise sales-order-archive
			endon
		endon
		// 10jun09
		print
			tvt-trans-date					in col 08
			tvt-trans-type					in col 20
			tvt-trans-ref					in col 25
			tvt-tr-details					in col 35 pic x(9)
			tvt-tr-amount					in col 45 pic --------.zz
			//
			tvt-so-territory-code			in col 59
			tvt-so-order-date				in col 65
			//tvt-so-order-no					in col 77 pic zzzzzzzz	// 10jun09
			//tvt-so-bo-suffix				in col 85 pic x				// 10jun09
			so-order-no						in col 77 pic zzzzzzzz		// 10jun09
			so-bo-suffix					in col 85 pic x				// 10jun09
			i5sodesc-so-status-desc-short   in col 87
			tvt-so-order-total-amount		in col 115 pic --------.zz

		set st-tr-amount 						+= tvt-tr-amount
		set st-so-order-total-amount 			+= tvt-so-order-total-amount
		set gt-tr-amount						+= tvt-tr-amount
		set gt-so-order-total-amount			+= tvt-so-order-total-amount
	after tvt-accountcode
		set lf-balance = st-so-order-total-amount + st-tr-amount
		if tvt-trans-exist or st-tr-amount != 0 // odd occasions when only 1 trans tvt-trans-exist = FALSE and this section did not print
			print
				"Transaction Total:" 			in col 25 bold
				st-tr-amount					in col 45 bold pic -------9.99
				no-new-line
		endif
		if tvt-orders-exist or st-so-order-total-amount != 0
			print
				"Order Total:"					in col 102 bold
				st-so-order-total-amount		in col 115 bold pic -------9.99
		endif
		//print
		//	"------------------------" in col 35
		print
			"Balance:"						in col 106 bold
			lf-balance						in col 115 bold pic -------9.99

		//print
		//	"------------------------" in col 35
		print
			//"--"							in col 01  bold
			tdc-trans-warnings				in col 08  bold
			tdc-order-warnings				in col 65  bold
		skip

		set lf-notes-header = SPACES
		// 14oct08
		// print sales-order-notes if found
		extract sales-order
		on index so-cust-code so-order-no so-bo-suffix
		key is tvt-accountcode 0 SPACES
		next same so-cust-code
		detail
			// should we ignore this order
			// 06jun08 show ready to update
			//if so-order-status in {"80" "90" "99"} or so-order-total-amount = 0 // or accountcode = territory  // 08may08
			if so-order-status in {"90" "99"} or so-order-total-amount = 0 // or accountcode = territory  // 08may08
				continue
			endif

			// 05nov08 ignore quotations
			if so-order-status in {"02"}
				continue
			endif

			if ws-show-all-stores
				// show regardless of store
			else
				if ws-store != so-territory-code
					continue
				endif
			endif
			// test notes


			// get notes 16oct08
			//extract sales-order-notes
			//on index so-order-no so-bo-suffix so-note-type so-user-code so-note-sequence-no
			//key is so-order-no so-bo-suffix SPACES SPACES 0
			//next same so-order-no so-bo-suffix
			// 20oct08 use select to only visit the note types we need avoiding false footer ---- lines being printed
			select * from sales-order-notes
			where so-order-no = :so-order-no and so-bo-suffix = :so-bo-suffix
			and so-note-type not in {"~"} and so-note-sequence-no != 0
			detail
				//if so-note-type in {"~"} // notes for system use, ignore
				//	continue
				//endif
				if strlen(lf-notes-header) > 0

				else
					set lf-notes-header = "Sales Order Notes:"
					print
						lf-notes-header						in col 08	bold
					print
						"Order"								in col 08	bold
						//start --------------------------------------------- //rc 01jul09
// 						"Rep"								in col 15	bold
// 						"    Date   "						in col 20	bold
// 						"Note"								in col 32	bold
						"Rep"								in col 16	bold
						"Date"								in col 30	bold
						"Note"								in col 45	bold
						//end ----------------------------------------------- //rc 01jul09
					//20oct08 reset footer trigger
					set lf-show-notes-footer = FALSE

				endif
				//if so-note-sequence-no = 0
				//	continue
				//endif
				if strlen(lf-notes-header) > 0
					set lf-show-notes-footer = TRUE
					print
						concat(str(so-order-no) so-bo-suffix)  in col 08 	//bold
						//so-note-sequence-no								//	bold
						//":"                                               //  bold
						//start --------------------------------------------- //rc 01jul09
						//so-rep-code									//bold
						//so-note-date                                        //bold
						//so-note-text                                        //bold
						strconcat(so-user-code)				in col 16
						so-note-date                        in col 30
						so-note-text                        in col 45
						//end ----------------------------------------------- //rc 01jul09
				endif

				after so-order-no so-bo-suffix
					if lf-show-notes-footer = TRUE
						print
							"---------------------------------------------------------------" in col 08
					endif
			//endextract
			endselect
		endextract
		// 14oct08
		// 14nov08
		// display DF deb-cust-notes if found
		set i = 0
		extract deb-cust-notes
		on index accountcode dcn-type dcn-seq-no
		key is tvt-accountcode "DF" 0
		next same accountcode dcn-type
		detail
			if i = 0
				print
					"Customer Notes:" in col 08 bold
				print
					"Login ID"							in col 08	bold
					//"Rep"								in col 15	bold
					"    Date   "						in col 20	bold
					"Note"								in col 32	bold
			endif
			 print
				substring(dcn-login-id,1,11) in col 08
				dcn-entry-date
				dcn-text
			set i += 1
		endextract
		if i > 0
			print
				"---------------------------------------------------------------" in col 08
		endif
		// 14nov08
	endextract
		skip 2
		print
			125"="

		//skip 2

		//print
			//  125"="

		set gt-balance = gt-so-order-total-amount + gt-tr-amount
		print
			"Transaction Grand Total:" 		in col 19 bold
			gt-tr-amount					in col 45 bold pic -------9.99
			no-new-line

		print
			"Order Grand Total:"			in col 96 bold
			gt-so-order-total-amount		in col 115 bold pic -------9.99
		print
			"Balance:"						in col 106 bold
			gt-balance						in col 115 bold pic -------9.99
		print
			125"="
		skip 4
		if ws-show-all-stores
			print
				"Store:"
				"All Stores"
		else
			print
				"Store:"
				ws-store
		endif
		print
			"User:"
			login-id()
	//ws-show-all-stores
	report finished
endprocedure // print-report-virtual ------------------------------------------

procedure print-report
local field
	st-tr-amount						like tr-amount
	st-so-order-total-amount			like so-order-total-amount
	lf-balance							like so-order-total-amount

	report "Customer Outstanding Orders"
	//length 150
	header is top-of-page
	page
	extract tmp-deb-cache
	detail
		need 7 lines
		set st-tr-amount = 0
		set st-so-order-total-amount = 0
		get deb-master
		on index accountcode
		key is tdc-accountcode
		print
			tdc-accountcode bold
			shortname		bold
			//"any thing else here?"
		//print
		//	60"-"
		print
			"Customer Transactions:" bold
		extract tmp-deb-trans
		on index tdt-accountcode tdt-trans-ref
		key is tdc-accountcode SPACES
		next same tdt-accountcode
		detail
			set st-tr-amount += tdt-tr-amount
			print
				tdt-trans-date  			in col 4
				tdt-trans-type
				tdt-trans-ref
				substring(tdt-tr-details,1,15)
				tdt-tr-amount				in col 44
		endextract
		print
			"Transaction Totals:" 			in col 24 bold
			st-tr-amount					in col 44 bold
		//skip 1
		print
			"Outstanding Sales Orders" bold
		extract tmp-deb-outstanding
		on index tdo-accountcode tdo-so-order-no tdo-so-bo-suffix
		key is tdc-accountcode 0 SPACES
		next same tdo-accountcode
		detail
			set so-order-status = tdo-so-order-status
			do i5sodesc-get-status-desc
			set st-so-order-total-amount += tdo-so-order-total-amount
			print
				tdo-so-order-date			in col 4
				tdo-so-order-no
				i5sodesc-so-status-desc-short
				tdo-so-order-total-amount  	in col 44
		endextract

		set lf-balance = st-so-order-total-amount + st-tr-amount
		print
			"Order Total:"					in col 31
			st-so-order-total-amount		in col 44
		//print
		//	"------------------------" in col 35
		print
			"Balance:"						in col 35 bold
			lf-balance						in col 44 bold //3 pic --------9.99
		//print
		//	"------------------------" in col 35
		skip

	endextract
	report finished
endprocedure // print-report --------------------------------------------------

