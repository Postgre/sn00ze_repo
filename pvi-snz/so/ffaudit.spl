procedure build-all
local field
	i		type numeric
	j		type numeric
	do get-date-range entry once
	if ws-confirm = TRUE
		//clear existing values
		open ism-ff-audit truncate permanent
		do unload-temp //{8}
		report "FF Global Audit"
			spool-only
			set i = 1
			set j = ws-max-datasets//5 //100 //for testing
			//do unload-temp //{8}
			extract system-companies
			detail
				//message "i: " i "  j:" j
				if i > j
					break
				endif
				if sys-comp-spare2 = "Y"
					print
						today()
						tod()
						sys-comp-code
						sys-comp-desc
						sys-comp-spare2
						"FF Audit called"
					command "sh"
						parameters
							"-c"
							concat("cd " strconcat(sys-comp-path) ";prospl pvi-snz/so/ffaudit -buildonly " julian-to-date(ws-start-date) " " julian-to-date(ws-end-date))
					set i += 1
				else
					print
						today()
						tod()
						sys-comp-code
						sys-comp-desc
						sys-comp-spare2
						"FF Audit not called"
				endif
			endextract
			//do load-temp //{8}
		report finished
	endif
endprocedure // build-all -----------------------------------------------------

